<section class="bg-secondary p-8 flex max-w-5xl m-auto flex-wrap">
	<div class="w-full md:w-1/2 flex justify-center items-center">
		{% if utilisateur.avatar %}
			<img src={{asset('images/avatars/' ~ utilisateur.avatar)}} alt="" class=" w-full m-auto max-h-[400px] object-cover">
		{% else %}
			<img src={{asset('images/avatars/default_avatar.svg')}} alt="" class=" w-full max-w-[300px] m-auto">
		{% endif %}
	</div>
	<div class="w-full md:w-1/2 space-y-4 relative shadow-md p-4 bg-background stroke-primary/60">

		<a href={{path("app_modification_profile_page")}} class="absolute top-4 right-4 hover:scale-110 transition-all cursor-pointer border border-primary p-1 rounded-sm">
			<svg class="w-5 h-5" viewbox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-pencil-ruler">
				<path d="M13 7 8.7 2.7a2.41 2.41 0 0 0-3.4 0L2.7 5.3a2.41 2.41 0 0 0 0 3.4L7 13"/>
				<path d="m8 6 2-2"/>
				<path d="m18 16 2-2"/>
				<path d="m17 11 4.3 4.3c.94.94.94 2.46 0 3.4l-2.6 2.6c-.94.94-2.46.94-3.4 0L11 17"/>
				<path d="M21.174 6.812a1 1 0 0 0-3.986-3.987L3.842 16.174a2 2 0 0 0-.5.83l-1.321 4.352a.5.5 0 0 0 .623.622l4.353-1.32a2 2 0 0 0 .83-.497z"/>
				<path d="m15 5 4 4"/>
			</svg>
		</a>

		<h2 class="text-2xl font-extrabold">{{utilisateur.pseudo}}</h2>
		<div class="flex">
			<div class="w-1/2">
				<div class="flex items-center gap-2">
					<img class="w-4 h-4" src={{asset('icons/email_icon.svg')}}>
					<p>
						{{utilisateur.email}}
					</p>
				</div>

				<div class="flex items-center gap-2">
					<img class="w-4 h-4" src={{asset('icons/telephone_icon.svg')}}>
					<p>
						{{utilisateur.telephone  ?? "N/A"}}
					</p>
				</div>
			</div>
			<div class="w-1/2">
				<div class="flex items-center gap-2">
					<img class="w-4 h-4" src={{asset('icons/emploi_icon.svg')}}>
					<p>
						{{utilisateur.emploi ?? "N/A"}}
					</p>
				</div>

				<div class="flex items-center gap-2">
					<img class="w-4 h-4" src={{asset('icons/website_icon.svg')}}>
					<p>
						{{utilisateur.siteURL ?? "N/A"}}
					</p>
				</div>
			</div>
		</div>


		<div class="">
			<h3 class="text-lg font-bold underline">Description:</h3>
			<p class={{utilisateur.description ? "text-primary/80":"text-primary/50"}}>
				{{utilisateur.description|default("Vous n'avez pas encore ajouté de déscription à votre profile...")}}
			</p>
		</div>
	</div>
</section>
